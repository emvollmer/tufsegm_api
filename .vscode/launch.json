    "version": "0.2.0",
    "configurations": [
        { // Deep as a Service debug
            "name": "Python: DEEPaaS",
            "type": "python",
            "request": "launch",
            "module": "deepaas.cmd.run",
            "args": [ "--listen-ip=0.0.0.0" ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        },
        { // Current file debug
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        }
    ]
}